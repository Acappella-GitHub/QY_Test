@import "../../icon/iconfont.wxss";
@import "../../icon/iconfont_2.wxss";

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.menu {
  width: 100%;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #EFEFEF;
}

.menu .icon-caidan {
  margin: 0 5px;
  height: 100%;
  line-height: 44px;
}

.menu .selector {
  margin-left: 45px;
  height: 100%;
  line-height: 44px;
}

.menu .translate-btn {
  margin: 0 5px;
}

.main {
  width: calc(100% - 10px);
  height: calc(100% - 102px);
  background: #DDD;
}

.tab {
  width: 100%;
  height: 48px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #EFEFEF;
}

.tab icon {
  width: 48px;
  height: 100%;
  line-height: 48px;
  text-align: center;
  font-size: 22px;
}