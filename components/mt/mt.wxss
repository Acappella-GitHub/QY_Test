.mt {
  width: 100%;
  height: calc(100% - 48px);
}

.menu {
  display: flex;
  width: 100%;
  height: 44px;
  background: #EFEFEF;
}

.multi-selector {
  margin: 0 auto;
  font-size: 14px;
  line-height: 44px;
}

.translate-button {
  align-self: center;
  position: fixed;
  right: 0;
  margin: 0 5px;
}

.input-box, .text-box {
  margin: 5px 0 0 5px;
  width: calc(100% - 10px);
  height: calc((100% - 44px) / 2 - 7.5px);
  background: #CCC;
}

.clear-textarea-icon {
  position: fixed;
  right: 10px;
  z-index: 1;
  display: flex;
  border-radius: 50%;
}

