@import "../../icon/iconfont_3.wxss";
@import "../../icon/iconfont_4.wxss";

.ocr {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.photo-box, .text-box {
  box-sizing: border-box;
  padding: 5px;
  width: 100%;
  height: calc(50% - 2.5px);
  background: #AAA;
}

.icon-photograph {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 160rpx;
}

.image-box {
  width: 100%;
  height: 100%;
  background: #EEE;
}

.tool-bar {
  width: calc(100% - 20px);
  height: 16px;
  position: fixed;
  display: flex;
  justify-content: flex-end;
  background: rgba(255, 255, 255, 0);
  z-index: 1;
}

.icon-shuaxin, .icon-guanbi {
  margin-left: 5px;
  display: flex;
  background: #FFF;
  border-radius: 50%;
}

.image {
  width: 100%;
  height: 100%;
}

.roll {
  width: 100%;
  height: 100%;
}