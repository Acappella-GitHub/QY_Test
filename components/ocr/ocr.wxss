.ocr {
  width: 100%;
  height: calc(100% - 48px);
}

.menu {
  width: 100%;
  height: 44px;
  display: flex;
  background: #EFEFEF;
}

.selector {
  margin: 0 auto;
  line-height: 44px;
}

.translate-btn {
  align-self: center;
  position: fixed;
  right: 0;
  margin: 0 5px;
}

.image-box, .text-box {
  box-sizing: border-box;
  margin: 5px 0 0 5px;
  width: calc(100% - 10px);
  height: calc((100% - 44px) / 2 - 7.5px);
  background: #CCC;
}

.icon-photograph {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 160rpx;
}

.icon-guanbi {
  position: fixed;
  right: 10px;
  z-index: 1;
  display: flex;
  border-radius: 50%;
}

.image {
  width: 100%;
  height: 100%;
}

.scroll {
  width: 100%;
  height: 100%;
}